@model MVC_StokProjesi.Models.Entity.TBL_URUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required=""/>
    </div>

    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" required="" placeholder="Buraya Marka Adı Giriniz"/>
    </div>

    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.TBL_KATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new
   {
       @class = "form-control"
   })
    </div>

    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required=""/>
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" required=""/>
    </div>


    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

